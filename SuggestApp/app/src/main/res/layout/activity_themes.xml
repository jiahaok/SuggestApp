<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pirate_crew.suggest.Themes"
    android:id="@+id/theme">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Themes"
        android:id="@+id/themetitle"
        android:textSize="35sp"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:id="@+id/def"
        android:layout_marginTop="25dp"
        android:checked="false"
        android:textSize="25sp"
        android:layout_below="@+id/themetitle"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:id="@+id/green"
        android:checked="false"
        android:textSize="25sp"
        android:layout_below="@+id/def"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:id="@+id/blue"
        android:checked="false"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/green"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:id="@+id/red"
        android:checked="false"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/blue"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:id="@+id/yel"
        android:checked="false"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/red"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inverted"
        android:id="@+id/in"
        android:checked="false"
        android:textSize="25sp"
        android:layout_below="@+id/yel"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/settheme"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/in"
        android:layout_centerHorizontal="true" />
</RelativeLayout>